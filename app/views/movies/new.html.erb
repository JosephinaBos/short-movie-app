<h2>Add a New Film</h2>

<%= form_for(@movie) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :summary %>
  <%= f.text_field :summary %>

  <%= f.label :duration %>
  <%= f.select :duration, (1..25).to_a %>

  <%= f.label :genres %>
  <%= f.select :genres, @genres_and_ids%>

  <%= f.submit %>
<% end %>
